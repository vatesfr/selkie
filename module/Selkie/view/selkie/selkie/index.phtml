$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<p>
	<a href="<?php echo $this->url('selkie', array('action'=>'add'));?>">Add new batch</a>
</p>

<table class="table">
<tr>
	<th>Creator</th>
	<th>Duration</th>
	<th>Creation</th>
	<th>Activation</th>
	<th>Comment</th>
