</tr>
<?php foreach ($batchs as $batch): ?>
<tr>
	<td><?php echo $this->escapeHtml($batch->creator);?></td>
	<td><?php echo $this->escapeHtml($batch->duration);?></td>
	<td><?php echo $this->escapeHtml($batch->creation);?></td>
	<td><?php echo $this->escapeHtml($batch->activation);?></td>
	<td><?php echo $this->escapeHtml($batch->comment);?></td>
	<td>
		<a href="<?php echo $this->url('selkie',
			array('action'=>'print', 'id' => $batch->id));?>">Print</a>
		<?php if ($this->isAdmin) { ?>
		<a href="<?php echo $this->url('selkie',
			array('action'=>'delete', 'id' => $batch->id));?>">Delete</a>
		<?php } ?>
	</td>
</tr>
<?php endforeach; ?>
</table>
